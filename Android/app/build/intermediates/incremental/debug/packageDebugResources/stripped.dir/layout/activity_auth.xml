<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/arrow_left"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/btn_back_auth"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btn_back_auth"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:gravity="center"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/poppinsbold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sing in or creat a new account"
            android:gravity="center"
            android:fontFamily="@font/poppinsmedium"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_height="@dimen/_200sdp"
            app:lottie_rawRes="@raw/login_icon"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:cornerRadius="@dimen/_10sdp"
            android:backgroundTint="@color/colorhighlight"
            android:text="Sign In"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_toStartOf="@+id/txt_or"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="#C6C6C6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/txt_or"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/txt_or"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#C6C6C6"/>

        </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cornerRadius="@dimen/_10sdp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Sign Up"/>

    </LinearLayout>

</RelativeLayout>