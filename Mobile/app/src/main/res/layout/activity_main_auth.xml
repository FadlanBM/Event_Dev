<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAuthActivity">
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/arrow_left"
        android:layout_margin="@dimen/_20sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50ssp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sing in or creat a new account"
            android:gravity="center"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="#424242"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_270sdp"
            app:lottie_rawRes="@raw/login_icon"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center"/>
     <com.google.android.material.button.MaterialButton
         android:layout_width="match_parent"
         android:layout_height="@dimen/_50sdp"
         android:backgroundTint="@color/colorhighlight"
         app:cornerRadius="@dimen/_10sdp"
         android:text="Login"
         android:textSize="@dimen/_12sdp"
         android:fontFamily="@font/poppinsbold"
         android:layout_marginHorizontal="@dimen/_20sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#B5B4B4"
                android:layout_toLeftOf="@+id/txt_or"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#B5B4B4"
                android:layout_toRightOf="@+id/txt_or"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="@dimen/_16ssp"
                android:layout_centerInParent="true"
                android:id="@+id/txt_or"/>
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="Register"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppinsbold"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="@dimen/_10sdp"
            android:textColor="@color/colorhighlight"/>
    </LinearLayout>

</RelativeLayout>